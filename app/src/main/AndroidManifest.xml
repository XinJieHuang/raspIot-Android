<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.raspiot.raspot">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="org.raspiot.raspot.RaspApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="org.raspiot.raspot.AppInit.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullscreenTheme" />

        <activity
            android:name="org.raspiot.raspot.AppInit.InitApplicationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="org.raspiot.raspot.Home.HomeActivity"
            android:launchMode="singleTask"
            android:label="@string/app_name">
        </activity>

        <activity android:name="org.raspiot.raspot.Settings.SettingsActivity"
            android:label="@string/title_activity_settings">
        </activity>

        <activity
            android:name="org.raspiot.raspot.Room.RoomActivity"
            android:label="@string/title_activity_room"
            android:theme="@style/AppTheme" >
        </activity>

        <activity
            android:name="org.raspiot.raspot.DeviceAdder.DeviceAdderActivity"
            android:label="@string/title_activity_device_adder"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name="org.raspiot.raspot.Auth.LogInActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity android:name="org.raspiot.raspot.Auth.SignUpActivity" />
    </application>

</manifest>